<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/userInfoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="53dp">

            <RelativeLayout
                android:layout_width="68dp"
                android:layout_height="68dp">

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:background="@drawable/circle_gray"
                    android:padding="2dp" />

                <ImageView
                    android:id="@+id/user_vip"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="2dp"
                    android:visibility="gone" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#ff333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_tourist_id"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:paddingTop="3dp"
                    android:text="ID:"
                    android:textColor="#ff999999"
                    android:textSize="14sp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/likeView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/xihuan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="喜欢"
                    android:layout_marginTop="4dp"
                    android:textColor="#ff000000"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/messageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/jiaoxing" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息"
                    android:layout_marginTop="4dp"
                    android:textColor="#ff000000"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/chatView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/xiaoxi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="留言"
                    android:layout_marginTop="4dp"
                    android:textColor="#ff000000"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/workView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@mipmap/ganxie"
            android:drawableRight="@drawable/icon_enter"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="26dp"
            android:paddingRight="30dp"
            android:text="我的作品"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/followView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@mipmap/biaodankongjianlianxiren"
            android:drawableRight="@drawable/icon_enter"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="26dp"
            android:paddingRight="30dp"
            android:text="我的关注"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fansView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@mipmap/jieban"
            android:drawableRight="@drawable/icon_enter"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="26dp"
            android:paddingRight="30dp"
            android:text="我的粉丝"
            android:textColor="#000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/walletView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@mipmap/feiyongbaohan"
            android:drawableRight="@drawable/icon_enter"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="26dp"
            android:paddingRight="30dp"
            android:text="我的钱包"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/personAuthView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@mipmap/jingxuan"
            android:drawableRight="@drawable/icon_enter"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="26dp"
            android:paddingRight="30dp"
            android:text="我的认证"
            android:textColor="#000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/merchantAuthView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@mipmap/dianpu"
            android:drawableRight="@drawable/icon_enter"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="26dp"
            android:paddingRight="30dp"
            android:text="商家入驻"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/myPointView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@mipmap/fapiao"
            android:drawableRight="@drawable/icon_enter"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="26dp"
            android:paddingRight="30dp"
            android:text="我的积分"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/settingView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@mipmap/shezhi"
            android:drawableRight="@drawable/icon_enter"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="26dp"
            android:paddingRight="30dp"
            android:text="设置"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>
